%header#site-header
  .main-head.wrapper
    %h1= link_to 'Damian Galarza', root_url

    %ul.social{ :role => 'menu' }
      %li= link_to 'Facebook', 'http://www.facebook.com/dgalarza', :class => 'social-facebook', :target => '_blank'
      %li= link_to 'Twitter', 'http://www.twitter.com/dgalarza', :class => 'social-twitter', :target => '_blank'
      %li= link_to 'Github', 'http://www.github.com/dgalarza', :class => 'social-github', :target => '_blank'

    %form#site-search{ :action => '/posts', :method => 'GET' }
      %input{ :type => 'text', :placeholder => 'Search', :name => 'search' }
      %input#search-submit{ :type => 'submit', :value => '' }

  %nav#site-nav.wrapper
    %ul{ :role => 'wrapper' }
      %li= link_to 'Blog', posts_path, :id => 'blog'
      %li= link_to 'About', '/about', :id => 'about'
      - #%li= link_to 'Contact', 'contact', :id => 'contact'
