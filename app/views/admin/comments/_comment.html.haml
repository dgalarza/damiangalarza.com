%tr
  %td.id-col= comment.id
  %td= comment.username
  %td
    = radio_button_tag "#{comment.id}-approved", true, comment.approved
    = label_tag "#{comment.id}-approved_true", 'Approved', :class => 'radio-label'

    = radio_button_tag "#{comment.id}-approved", false, !comment.approved
    = label_tag "#{comment.id}-approved_false", 'Spam', :class => 'radio-label'

  %td= link_to 'View', '', :class => 'view-icon admin-action-icon'
